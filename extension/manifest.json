{
	"manifest_version": 3,

	"name": "Watch2Youtube",
	"description": "Create W2G Rooms right on youtube",
	"version": "1.0.0.2",
	"permissions": ["activeTab"],
	"icons": {
		"16": "./icons/icon.png",
		"48": "./icons/icon.png",
		"128": "./icons/icon.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"css": ["./content/buddne.css"],
			"js": ["./content/script.js"],
			"all_frames": true
		}
	],
	"action": {
		"default_popup": "./content/index.html"
	}
}
